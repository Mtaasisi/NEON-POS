# PostgREST Production Dockerfile
FROM postgrest/postgrest:v11.2.2

# Add health check
HEALTHCHECK --interval=10s --timeout=5s --retries=3 \
  CMD wget --spider -q http://localhost:3000/ || exit 1

# Expose port
EXPOSE 3000

# PostgREST will use environment variables:
# - PGRST_DB_URI
# - PGRST_DB_SCHEMAS
# - PGRST_DB_ANON_ROLE
# - PGRST_JWT_SECRET
# - PGRST_OPENAPI_SERVER_PROXY_URI

