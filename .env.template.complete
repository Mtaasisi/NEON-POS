# ==============================================
# LATS CHANCE POS - Complete Environment Configuration Template
# ==============================================
# Copy this file to:
#   - .env (for development)
#   - .env.production (for production)
# And fill in your actual values
# ==============================================

# ==============================================
# DATABASE CONFIGURATION (NEON DATABASE)
# ==============================================
DATABASE_URL=postgresql://user:password@endpoint.aws.neon.tech/dbname?sslmode=require
VITE_DATABASE_URL=postgresql://user:password@endpoint.aws.neon.tech/dbname?sslmode=require

# ==============================================
# ENVIRONMENT SETTINGS
# ==============================================
NODE_ENV=development
VITE_APP_ENV=development
VITE_ENV=development

# ==============================================
# API CONFIGURATION
# ==============================================
VITE_API_URL=http://localhost:3000

# ==============================================
# AI SERVICES (GOOGLE GEMINI)
# ==============================================
# Get your free API key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=

# ==============================================
# WHATSAPP INTEGRATION (GREEN API)
# ==============================================
VITE_GREENAPI_INSTANCE_ID=your_instance_id_here
VITE_GREENAPI_API_TOKEN=your_api_token_here
VITE_GREENAPI_API_URL=https://your-instance.api.greenapi.com

# ==============================================
# SUPABASE (OPTIONAL - For Storage/Auth)
# ==============================================
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==============================================
# FEATURE FLAGS
# ==============================================
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_USE_MOCK_DATA=false

# ==============================================
# DEVELOPMENT & DEBUGGING
# ==============================================
VITE_DEBUG_MODE=true
DEBUG_LOGGING=true
